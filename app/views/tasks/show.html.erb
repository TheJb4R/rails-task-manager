<h1><%= @task.title.capitalize %></h1>
<p>-> <%= @task.details %></p>

<button><%= link_to "See all your tasks", root_path %></button>
<button><%= link_to "Edit task", edit_path(@task.id) %></button>
<button><%= link_to "Delete task", task_path(@task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
